<style>
  .nav-link-mobile {
    display: block;
    padding: 0.5rem 0.75rem; /* Equivalente a py-2 px-3 */
    border-radius: 0.375rem; /* Equivalente a rounded-md */
    font-size: 1rem; /* Equivalente a text-base */
    font-weight: 500; /* Equivalente a font-medium */
    color: rgb(55 65 81); /* Equivalente a text-gray-700 */
    transition: background-color 0.2s, color 0.2s; /* Añadido para un efecto suave */
  }

  .nav-link-mobile:hover {
    background-color: rgb(243 244 246); /* Equivalente a hover:bg-gray-100 */
    color: rgb(17 24 39); /* Equivalente a hover:text-gray-900 */
  }
</style>

<script>
  const menuButton = document.getElementById('mobile-menu-button');
  const mobileMenu = document.getElementById('mobile-menu');
  const iconOpen = document.getElementById('icon-open');
  const iconClose = document.getElementById('icon-close');

  function toggleMenu() {
    const isExpanded = menuButton.getAttribute('aria-expanded') === 'true';
    menuButton.setAttribute('aria-expanded', String(!isExpanded));
    mobileMenu.classList.toggle('hidden');
    iconOpen.classList.toggle('hidden');
    iconClose.classList.toggle('hidden');
  }

  if (menuButton) {
    menuButton.addEventListener('click', toggleMenu);
  }

  // --- Smooth scroll & mobile menu close logic ---
  const scrollButtons = document.querySelectorAll('button[data-target-id]');

  scrollButtons.forEach(button => {
    button.addEventListener('click', () => {
      const targetId = button.dataset.targetId;
      const targetElement = document.getElementById(targetId);

      if (targetElement) {
        targetElement.scrollIntoView({ behavior: 'smooth' });
      }

      // Close mobile menu if it's open and a mobile link was clicked
      if (mobileMenu && !mobileMenu.classList.contains('hidden') && button.classList.contains('nav-link-mobile')) {
          toggleMenu();
      }
    });
  });
</script>
